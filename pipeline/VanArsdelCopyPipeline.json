{
	"name": "VanArsdelCopyPipeline",
	"properties": {
		"activities": [
			{
				"name": "ForEach_xbi",
				"type": "ForEach",
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.cw_items",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy_xbi",
							"type": "Copy",
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [
								{
									"name": "Source",
									"value": "@{item().source.tableName}"
								},
								{
									"name": "Destination",
									"value": "/@{item().destination.fileName}"
								}
							],
							"typeProperties": {
								"source": {
									"type": "SqlServerSource"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSetting"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSetting",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "SourceDataset_xbi",
									"type": "DatasetReference",
									"parameters": {
										"cw_tableName": "@item().source.tableName"
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DestinationDataset_xbi",
									"type": "DatasetReference",
									"parameters": {
										"cw_fileName": {
											"value": "@replace(replace(item().destination.fileName, '[' , ''), ']', '')",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"cw_items": {
				"type": "Array",
				"defaultValue": [
					{
						"source": {
							"tableName": "[dbo].[Actors]"
						},
						"destination": {
							"fileName": "[dbo].[Actors].csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[Customers]"
						},
						"destination": {
							"fileName": "[dbo].[Customers].csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[MovieActors]"
						},
						"destination": {
							"fileName": "[dbo].[MovieActors].csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[Movies]"
						},
						"destination": {
							"fileName": "[dbo].[Movies].csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[OnlineMovieMappings]"
						},
						"destination": {
							"fileName": "[dbo].[OnlineMovieMappings].csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[Transactions]"
						},
						"destination": {
							"fileName": "[dbo].[Transactions].csv"
						}
					}
				]
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}